        "/api/posts/{id}": {
            "get": {
                "tags": [
                    "Post Manage"
                ],
                "summary": "Find Post",
                "operationId": "show",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of post",
                        "required": true,
                        "schema": {
